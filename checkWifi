network=$(nmcli | grep -v -E 'interface|p2p' | grep 'wlp58s0' | sed 's/wlp58s0: //g' | cut -d' ' -f3)

if [ "$1" = "raw" ]; then
	case $status in
		connected) echo "ğŸŒ $network"	;;
		disconnected) echo "ğŸ”´ DOWN"	;;
		connecting) echo "ğŸŸ¡ CONNECTING" ;; 
	esac
	exit
fi

case $status in
	connected) echo "ğŸŒ Connected to $network"		;;
	disconnected) echo "ğŸ”´ Disconnected from Network"	;;
esac
