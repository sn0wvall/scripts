#!/bin/sh

selection="$(printf "$(nmcli c show | grep -Eo '^[^ ]+' | grep -v NAME)" | dmenu -i -l 30 -fn "Source Code Pro For Powerline" -p "Bring $1:")"

test -z $selection && notify-send "ğŸ›‘ No Selection Made; Exiting" & exit 2

test "$1" = "up" && action="ğŸŒ Connecting to" || action="âŒ Disconnecting from"

notify-send "$action $selection" && nmcli c $1 $selection || notify-send "ğŸ›‘ Connection Failed"
