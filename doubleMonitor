#!/bin/sh

w1="âšª"
w2="âšª"
w3="âšª"
w4="ðŸ’¬"
w5="ðŸ”§"
w6="ðŸ”§"
w7="ðŸŽ§"
w8="ðŸ–¥"
w9="ðŸ–¥"

case $1 in
	double)
		xrandr --output eDP1 --auto
		xrandr --output DP1 --auto
		xrandr --output DP1 --primary
		$HOME/.bin/bspwmMonitorCalibrate
		echo "ðŸ–¥ Connecting to Monitor DP1"
	;;
	single)
		echo "ðŸ–¥ Resetting to main screen"
		for Line in $(bspc query -m DP1 --nodes)
		do
			echo "Moving $(xprop -id $Line WM_NAME 2>/dev/null | sed 's/^.*=//g' | sed 's/\"//g' | sed 's/^ //g')"
			bspc node $Line -d $w1
		done
		bspc monitor DP1 --remove
		xrandr --output DP1 --off
		xrandr --output eDP1 --auto
	;;
esac

setxkbmap gb
