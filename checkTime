#!/bin/sh

time="$(date +%R:%S)"
timeTrimmed="$(echo $time | cut -d':' -f1)"

case $timeTrimmed in
	01|13)  timeSymbol=ğŸ•		;;
	02|14) 	timeSymbol=ğŸ•‘		;;
	03|15) 	timeSymbol=ğŸ•’		;;
	04|16)	timeSymbol=ğŸ•“		;;
	05|17)	timeSymbol=ğŸ•”		;;
	06|18)	timeSymbol=ğŸ••		;;
	07|19)	timeSymbol=ğŸ•–		;;
	08|20)	timeSymbol=ğŸ•’		;;
	09|21)	timeSymbol=ğŸ•˜		;;
	10|22)	timeSymbol=ğŸ•™		;;
	11|23)	timeSymbol=ğŸ•š		;;
	12|00)	timeSymbol=ğŸ•›		;;
esac

echo "$timeSymbol $time"
