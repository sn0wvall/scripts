#!/bin/sh

export DBUS_SESSION_BUS_ADDRESS="unix:path=/run/user/1000/bus"
export DISPLAY=:0
export XAUTHORITY=/home/beta/.Xauthority

test -z "$2" && name="Unnamed" || name="$2"

case $1 in
	here)		dunstify -r 2000 "Ó§± Removable Device Connected" "Ó•¢ $name"	;;
	gone)		dunstify -r 2001 "Ó§≤ Removable Device Disconnected" "Ó•¢ $name"	;;
	hereinput)	dunstify -r 2002 "Ó®ä Input Device Connected" "Ó¶º $name"		;;
	goneinput)	dunstify -r 2003 "Ó®ã Input Device Disconnected" "Ó¶º $name"	;;
	full)		dunstify -r 2004 "Ó¶µ Battery Fully Charged"			;;
	heremonitor)	dunstify -r 2007 "üñ• Monitor Connected" 			;;	
	gonemonitor)	dunstify -r 2008 "üñ• Monitor Disconnected"			;;
	herepci)	dunstify -r 2009 "üö† PCI Device Connected" "$name"		;;	
	gonepci)	dunstify -r 2010 "üö† PCI Device Disconnected" "$name"		;;
esac

test "$4" = "crypto_LUKS" && dunstify -r 2006 "Ó¶è Crypt Device Detected"

sudo -u beta /home/beta/.bin/devHandler $1 $2 $3 $4
