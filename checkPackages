#!/bin/sh

export DISPLAY=:0
export DBUS_SESSION_BUS_ADDRESS="unix:path=/run/user/1000/bus"

ping -c 2 1.1.1.1>/dev/null || exit 1

updatesCount="$(checkupdates | wc -l)"
updates="$(checkupdates | head -n 30)"
test $updatesCount -gt 30 && updatesAdditional="\n\nğŸ“‹ <i>And $(expr $updatesCount - 30) more</i>\n"
checkupdates | grep "linux-lts" >/dev/null && updatesAdditional="$updatesAdditional\n<b>ğŸ“¦ Kernel Update Available</b>"

test -n "$updates" && /usr/bin/notify-send "ğŸ“¬ Updates are available:" "\n$updates$updatesAdditional\n" || /usr/bin/notify-send "ğŸ“ª No updates available"
