#!/bin/sh

export DISPLAY=:0
export DBUS_SESSION_BUS_ADDRESS="unix:path=/run/user/1000/bus"
  

ping -c 2 1.1.1.1>/dev/null || exit 1

/usr/bin/notify-send " Syncing Repositories"

sudo pacman -Syy &>/dev/null

packages="$(pacman -Qu)"

test -n "$packages" && /usr/bin/notify-send " Updates are available:" "\n$packages" || /usr/bin/notify-send " No updates available"
